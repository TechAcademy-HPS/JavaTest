def buildno = BUILD_NUMBER
pipeline {
    agent any
    tools {
        maven "maven3.6.3"
    }
	
    stages {
      	
         stage('Build'){
             steps{
		    sh "mvn clean package"
	              }
        } 
	   
	
	stage('Building image') {
            steps{
                script {
			  sh "docker build -t public.ecr.aws/g7r5s0z3/expressappcontainer:${buildno} ."
                     }
                  }
              }
	      
	 /*stage('push to repo') {
            steps{
                script {
			 sh "aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/g7r5s0z3"
			  sh "docker push public.ecr.aws/g7r5s0z3/expressappcontainer"
                  }
              }
          }
	
        stage('K8S Deploy') {
             steps{   
              script {
                    withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'kubeconfig', namespace: '', restrictKubeConfigAccess: false, serverUrl: '') {
                     sh ('kubectl apply -f  eks-deploy-k8s.yaml')
                           }
             }
            }
        }

     }

}
