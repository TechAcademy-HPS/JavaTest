pipeline {
agent any
  tools {
        terraform 'terraform-11'
    }
    stages {
        stage('Initialize') {
            steps{
                    dir('/opt/terraform/') {
                        script {
                              sh "terraform init"
                              sh "terraform fmt"
                              sh "terraform plan"
                              sh "terraform apply --auto-approve"

                        }
                      
                    }
	          }
		}
	}
}	
